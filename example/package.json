{
  "name": "graphql-react-example",
  "private": true,
  "dependencies": {
    "babel-plugin-transform-inline-environment-variables": "^0.4.0",
    "cross-fetch": "^2.1.1",
    "dotenv-cli": "^1.4.0",
    "express": "^4.16.3",
    "express-graphql": "^0.6.12",
    "fake-tag": "^1.0.0",
    "graphql": "^0.13.2",
    "graphql-react": "^1.0.0",
    "next": "^6.0.0",
    "react": "^16.3.2",
    "react-dom": "^16.3.2"
  },
  "devDependencies": {
    "now": "^11.1.7"
  },
  "scripts": {
    "build": "dotenv next build",
    "start": "dotenv node server",
    "deploy": "now"
  },
  "babel": {
    "presets": [
      "next/babel"
    ],
    "plugins": [
      "transform-inline-environment-variables"
    ]
  },
  "eslintConfig": {
    "parserOptions": {
      "sourceType": "module"
    },
    "rules": {
      "react/react-in-jsx-scope": "off",
      "react/prop-types": "off"
    }
  },
  "now": {
    "alias": "graphql-react",
    "env": {
      "NODE_ENV": "production",
      "DOMAIN": "https://graphql-react.now.sh",
      "PORT": 80,
      "API_URL": "https://graphql-react.now.sh/graphql"
    }
  }
}
